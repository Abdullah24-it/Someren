@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger shadow-sm">
        <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
        <p class="lead">An error occurred while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong>
                <code>@Model.RequestId</code>
            </p>
        }
    </div>

    <div class="card border-warning mt-4">
        <div class="card-header bg-warning text-dark fw-bold">
            Development Mode Notice
        </div>
        <div class="card-body">
            <p>Switching to <strong>Development</strong> environment will show more detailed information about the error.</p>
            <p class="mb-0">
                <strong class="text-danger">Note:</strong> Do <u>not</u> enable the Development environment in production!
                It may expose sensitive application details.
            </p>
            <p class="mt-2">
                To enable it locally, set the <code>ASPNETCORE_ENVIRONMENT</code> variable to <code>Development</code> and restart the app.
            </p>
        </div>
    </div>
</div>
