@{
    ViewData["Title"] = "Delete Student";
}

<h4>Delete Student</h4>
<form action="/Students/Delete" method="POST">
	<input hidden type="number" name="StudentId" value="@Model?.StudentId" />

	<label for="StudentNumber">Student number:</label>
	<input type="text" id="StudentNumber" name="StudentNumber" class="form-control" readonly value="@Model?.StudentNumber" />

	<label for="FirstName">First Name:</label>
	<input type="text" id="FirstName" name="FirstName" class="form-control" readonly value="@Model?.FirstName" />

	<label for="LastName">Last Name:</label>
	<input type="text" id="LastName" name="LastName" class="form-control" readonly value="@Model?.LastName" />

	<label for="PhoneNumber">Phone number:</label>
	<input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" readonly value="@Model?.PhoneNumber" />

	<label for="Class">Class:</label>
	<input type="text" id="Class" name="Class" class="form-control" readonly value="@Model?.Class" />

	



	<button type="submit" class="btn btn-primary">Delete</button>

</form>


<a href="/Students/Index">Back to List</a>

