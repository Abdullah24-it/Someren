
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Student</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-semibold mb-4">
                Are you sure you want to delete this student? This action cannot be undone.
            </p>

            <form action="/Students/Delete" method="POST">
                <input type="hidden" name="StudentId" value="@Model?.StudentId" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Student Number</label>
                    <input type="text" class="form-control" readonly value="@Model?.StudentNumber" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">First Name</label>
                    <input type="text" class="form-control" readonly value="@Model?.FirstName" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Last Name</label>
                    <input type="text" class="form-control" readonly value="@Model?.LastName" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Phone Number</label>
                    <input type="text" class="form-control" readonly value="@Model?.PhoneNumber" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Class</label>
                    <input type="text" class="form-control" readonly value="@Model?.Class" />
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Students/Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-danger">Delete Student</button>
                </div>
            </form>
        </div>
    </div>
</div>
