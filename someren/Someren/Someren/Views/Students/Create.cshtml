@{
	ViewData["Title"] = "Create User";
}
<h4>Create User</h4>
<form action="/Users/Create" method="POST">
	<label for="name">Name:</label>
	<input type="text" id="UserName" name="UserName" class="form-control" required value="@Model?.UserName" />

	<label for="mobilenumber">Phone number:</label>
	<input type="message" id="MobileNumber" name="MobileNumber" class="form-control" required value="@Model?.MobileNumber" />

	<label for="email">Email:</label>
	<input type="message" id="Email" name="Email" class="form-control" required value="@Model?.Email" />

	<label for="password">Password:</label>
	<input type="password" id="Password" name="Password" class="form-control" required value="@Model?.Password" />




	<button type="submit" class="btn btn-primary">Add</button>


</form>

<a href="/Users/Index">Back to List</a>

}
