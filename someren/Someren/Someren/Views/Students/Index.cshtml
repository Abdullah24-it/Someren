
@{
    ViewData["Title"] = "Students";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Students</h1>
        <a class="btn btn-success shadow-sm" href="/Students/Create">+ Create New</a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Student Number</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Class</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentNumber</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.PhoneNumber</td>
                    <td>@student.Class</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" href="/Students/Edit/@student.StudentId">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Students/Delete/@student.StudentId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
