@{
    ViewData["Title"] = "Lecturers";
}

<div class="text-center">
    <h1 class="display-4">Lecturers</h1>
    <a href="/Lecturers/Create">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.FirstName</td>
                    <td>@lecturer.LastName</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>@lecturer.Age</td>
                    <td>
                        <a href="/Lecturers/Edit/@lecturer.LecturerId">Edit</a> |
                        <a href="/Lecturers/Delete/@lecturer.LecturerId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

