
@{
    ViewData["Title"] = "Lecturers";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Lecturers</h1>
        <a class="btn btn-success shadow-sm" href="/Lecturers/Create">+ Create New</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Age</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.FirstName</td>
                    <td>@lecturer.LastName</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>@lecturer.Age</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" href="/Lecturers/Edit/@lecturer.LecturerId">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Lecturers/Delete/@lecturer.LecturerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
