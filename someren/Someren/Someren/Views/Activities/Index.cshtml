
    
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Activities</h1>
        <a class="btn btn-success" href="/Activities/Create">+ Create New</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Activity Name</th>
                <th>Activity Date</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.ActivityName</td>
                    <td>@activity.ActivityDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" href="/Activities/Edit/@activity.ActivityId">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Activities/Delete/@activity.ActivityId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
