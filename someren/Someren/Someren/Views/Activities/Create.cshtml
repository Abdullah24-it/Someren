
@{
	ViewData["Title"] = "Create Activity";
}

<div class="container mt-5">
	<div class="card shadow-lg">
		<div class="card-header bg-primary text-white">
			<h4 class="mb-0">Create Activity</h4>
		</div>
		<div class="card-body">
			<form action="/Activities/Create" method="POST">
				<input type="hidden" name="ActivityId" value="@Model?.ActivityId" />

				<div class="mb-3">
					<label for="ActivityName" class="form-label fw-bold">Activity Name</label>
					<input type="text" id="ActivityName" name="ActivityName" class="form-control" required value="@Model?.ActivityName" placeholder="Enter activity name" />
				</div>

				<div class="mb-3">
					<label for="ActivityDate" class="form-label fw-bold">Activity Date</label>
					<input type="date" id="ActivityDate" name="ActivityDate" class="form-control" required value="@Model?.ActivityDate?.ToString("yyyy-MM-dd")" />
				</div>

				<div class="d-flex justify-content-between">
					<a href="/Activities/Index" class="btn btn-secondary">Back to List</a>
					<button type="submit" class="btn btn-success">Add Activity</button>
				</div>
			</form>
		</div>
	</div>
</div>
