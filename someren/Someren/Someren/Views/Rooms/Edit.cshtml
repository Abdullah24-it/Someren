
@{
	ViewData["Title"] = "Edit Room";
}

<div class="container mt-5">
	<div class="card shadow-lg">
		<div class="card-header bg-warning text-dark">
			<h4 class="mb-0">Edit Room</h4>
		</div>
		<div class="card-body">
			<form action="/Rooms/Edit" method="POST">
				<input type="hidden" name="RoomId" value="@Model?.RoomId" />

				<div class="mb-3">
					<label for="RoomNumber" class="form-label fw-bold">Room Number</label>
					<input type="text" id="RoomNumber" name="RoomNumber" class="form-control" required value="@Model?.RoomNumber" placeholder="e.g. A102" />
				</div>

				<div class="mb-3">
					<label for="AmountOfBeds" class="form-label fw-bold">Amount of Beds</label>
					<input type="number" id="AmountOfBeds" name="AmountOfBeds" class="form-control" required min="1" value="@Model?.AmountOfBeds" placeholder="e.g. 4" />
				</div>

				<div class="mb-3">
					<label for="FloorNumber" class="form-label fw-bold">Floor Number</label>
					<input type="number" id="FloorNumber" name="FloorNumber" class="form-control" required value="@Model?.FloorNumber" placeholder="e.g. 2" />
				</div>

				<div class="mb-3">
					<label for="BuildingName" class="form-label fw-bold">Building Name</label>
					<input type="text" id="BuildingName" name="BuildingName" class="form-control" required value="@Model?.BuildingName" placeholder="e.g. Building A" />
				</div>

				<div class="d-flex justify-content-between">
					<a href="/Rooms/Index" class="btn btn-secondary">Back to List</a>
					<button type="submit" class="btn btn-warning text-white">Save Changes</button>
				</div>
			</form>
		</div>
	</div>
</div>
