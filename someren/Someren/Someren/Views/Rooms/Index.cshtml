@{
    ViewData["Title"] = "Rooms";
}

<div class="text-center">
    <h1 class="display-4">Rooms</h1>
    <a href="/Rooms/Create">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Room number</th>
            <th>Amount of beds</th>
            <th>Floor number</th>
            <th>Building name</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.AmountOfBeds</td>
                    <td>@room.FloorNumber</td>
                    <td>@room.BuildingName</td>
                    <td>
                        <a href="/Rooms/Edit/@room.RoomId">Edit</a> |
                        <a href="/Rooms/Delete/@room.RoomId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

