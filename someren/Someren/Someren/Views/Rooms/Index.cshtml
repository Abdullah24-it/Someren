
@{
    ViewData["Title"] = "Rooms";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Rooms</h1>
        <a class="btn btn-success shadow-sm" href="/Rooms/Create">+ Create New</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Room Number</th>
                <th>Amount of Beds</th>
                <th>Floor Number</th>
                <th>Building Name</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.AmountOfBeds</td>
                    <td>@room.FloorNumber</td>
                    <td>@room.BuildingName</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" href="/Rooms/Edit/@room.RoomId">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Rooms/Delete/@room.RoomId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
