
@{
	ViewData["Title"] = "Delete Room";
}

<div class="container mt-5">
	<div class="card shadow-lg border-danger">
		<div class="card-header bg-danger text-white">
			<h4 class="mb-0">Delete Room</h4>
		</div>
		<div class="card-body">
			<p class="text-danger fw-semibold mb-4">
				Are you sure you want to delete this room? This action <strong>cannot be undone.</strong>
			</p>

			<form action="/Rooms/Delete" method="POST">
				<input type="hidden" name="RoomId" value="@Model?.RoomId" />

				<div class="mb-3">
					<label class="form-label fw-bold">Room Number</label>
					<input type="text" class="form-control" readonly value="@Model?.RoomNumber" />
				</div>

				<div class="mb-3">
					<label class="form-label fw-bold">Amount of Beds</label>
					<input type="text" class="form-control" readonly value="@Model?.AmountOfBeds" />
				</div>

				<div class="mb-3">
					<label class="form-label fw-bold">Floor Number</label>
					<input type="text" class="form-control" readonly value="@Model?.FloorNumber" />
				</div>

				<div class="mb-3">
					<label class="form-label fw-bold">Building Name</label>
					<input type="text" class="form-control" readonly value="@Model?.BuildingName" />
				</div>

				<div class="d-flex justify-content-between">
					<a href="/Rooms/Index" class="btn btn-secondary">Cancel</a>
					<button type="submit" class="btn btn-danger">Delete Room</button>
				</div>
			</form>
		</div>
	</div>
</div>
